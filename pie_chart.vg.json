{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1050,
  "height": 400,
  "title": {
    "text": "Marriage Distribution by Gender",
    "subtitle": "Filtered by Year, State and Age Group",
    "fontSize": 20,
    "subtitleFontSize": 14,
    "color": "#2c3e50",
    "subtitleColor": "#7f8c8d"
  },
  "config": {
    "title": {
      "font": "Times New Roman",
      "fontSize": 14
    }
  },
  "data": {
    "url": "Cleaned_Data/marriages_state_age_sex - Cleaned.csv",
    "format": { "type": "csv" }
  },
  "params": [
    { "name": "Year_selection", "value": 2017 },
    { "name": "State_selection", "value": "all" },
    { "name": "Age_selection", "value": "all" }
  ],
  "transform": [
    {
      "filter": "datum.year == Year_selection && (State_selection == 'all' || datum.state == State_selection) && datum.age == Age_selection"
    }
  ],
  "mark": { "type": "arc", "outerRadius": 150 },
  "encoding": {
    "theta": {
      "field": "total_marriages",
      "type": "quantitative",
      "title": "Number of Marriages"
    },
    "color": {
      "field": "sex",
      "type": "nominal",
      "title": "Gender",
      "scale": {
        "domain": ["female", "male"],
        "range": ["#ff9cba", "#82a3ff"]
      }
    },
    "tooltip": [
      { "field": "state", "title": "State" },
      { "field": "sex", "title": "Gender" },
      { "field": "total_marriages", "title": "Total Marriages" },
      { "field": "year", "title": "Year" }
    ]
  }
}
