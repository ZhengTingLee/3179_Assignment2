{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#c0e0ff",
  "width": 1200,
  "height": 400,
  "autosize": { "type": "fit", "contains": "padding" },
  "title": {
    "text": "Marriage Rate (by 1000 population) by States in Malaysia",
    "fontSize": 20,
    "color": "#000000"
  },
  "config": {
    "title": {
      "font": "Times New Roman",
      "fontSize": 14
    }
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2017,
      "bind": {
        "input": "range",
        "min": 2017,
        "max": 2022,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "State_selection",
      "value": "all",
      "bind": {
        "input": "select",
        "options": [
          "Johor",
          "Kedah",
          "Kelantan",
          "Melaka",
          "Negeri Sembilan",
          "Pahang",
          "Perak",
          "Perlis",
          "Pulau Pinang",
          "Sabah",
          "Sarawak",
          "Selangor",
          "Terengganu",
          "all"
        ],
        "labels": [
          "Johor",
          "Kedah",
          "Kelantan",
          "Melaka",
          "Negeri Sembilan",
          "Pahang",
          "Perak",
          "Perlis",
          "Pulau Pinang",
          "Sabah",
          "Sarawak",
          "Selangor",
          "Terengganu",
          "All states"
        ],
        "name": "State: "
      }
    },
    {
      "name": "Age_selection",
      "value": "25-29",
      "bind": {
        "input": "select",
        "options": [
          "< 20",
          "20-24",
          "25-29",
          "30-34",
          "35-39",
          "40-44",
          "45-49",
          "50-54",
          "55-59",
          "60-64",
          "65+",
          "all"
        ],
        "labels": [
          "less than 20",
          "20-24",
          "25-29",
          "30-34",
          "35-39",
          "40-44",
          "45-49",
          "50-54",
          "55-59",
          "60-64",
          "65 and above",
          "All ages"
        ],
        "name": "Age group: "
      }
    }
  ],
  "projection": { "type": "mercator" },
  "layer": [
    {
      "data": {
        "url": "Cleaned_Data/malaysia_states_map.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_10m_graticules_1"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#ffffff",
        "strokeWidth": 0.8
      }
    },
    {
      "data": {
        "url": "Cleaned_Data/malaysia_states_map.topojson",
        "format": {
          "type": "topojson",
          "feature": "my"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#d7d7d7",
        "stroke": "#333"
      }
    },
    {
      "data": {
        "url": "Cleaned_Data/marriage_population_normalized-Cleaned.csv",
        "format": {
          "type": "csv"
        }
      },
      "transform": [
        {
          "lookup": "state",
          "from": {
            "data": {
              "url": "Original_Data/malaysia_states_map.topojson",
              "format": {
                "type": "topojson",
                "feature": "my"
              }
            },
            "key": "properties.name"
          },
          "as": "geo"
        },
        {
          "filter": "datum.year == Year_selection && (State_selection == 'all' || datum.state == State_selection) && datum.age == Age_selection"
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "#000000"
      },
      "encoding": {
        "shape": { "field": "geo", "type": "geojson" },
        "color": {
          "field": "marriage_rate_per_1000_population",
          "type": "quantitative",
          "legend": {
            "title": "Marriage Rate",
            "titleFont": "Times New Roman",
            "titleFontSize": 14,
            "labelFont": "Calibri",
            "labelFontSize": 12
          },
          "scale": {
            "scheme": "reds",
            "domain": [0, 150]
          }
        },
        "tooltip": [
          { "field": "state", "title": "State" },
          { "field": "year", "title": "Year" },
          {
            "field": "marriage_rate_per_1000_population",
            "title": "Marriage Rate"
          }
        ]
      }
    },
    {
      "data": {
        "url": "Cleaned_Data/malaysia_states_map.topojson",
        "format": {
          "type": "topojson",
          "feature": "my"
        }
      },
      "transform": [
        {
          "filter": "!(datum.properties.name == 'Labuan' || datum.properties.name == 'Kuala Lumpur' || datum.properties.name == 'Putrajaya')"
        }
      ],
      "mark": { "type": "text" },
      "encoding": {
        "longitude": { "field": "properties.longitude" },
        "latitude": { "field": "properties.latitude" },
        "text": { "field": "properties.name" },
        "color": { "value": "#000000" }
      }
    }
  ]
}
